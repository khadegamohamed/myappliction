<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5756"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/main_library_tv"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="center"
        android:text="@string/my_library"
        android:textColor="@color/cardview_light_background"
        android:textSize="60sp" />

    <Button
        android:id="@+id/main_btn_subject"
        android:layout_width="129dp"
        android:layout_height="70dp"
        android:layout_below="@id/main_library_tv"
        android:layout_marginTop="60dp"
        android:background="@drawable/shape"
        android:text="@string/my_subjects"
        android:textSize="40sp" />

    <Button
        android:id="@+id/main_btn_cources"
        android:layout_width="120dp"

        android:layout_height="70dp"
        android:layout_below="@id/main_library_tv"
        android:layout_marginTop="64dp"

        android:layout_marginRight="91dp"
        android:layout_toLeftOf="@id/main_btn_subject"

        android:background="@drawable/shape"
        android:text="@string/my_cources"
        android:textSize="40sp" />

    <Button
        android:id="@+id/main_btn_tables"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:layout_below="@id/main_btn_subject"
        android:layout_marginTop="155dp"
        android:background="@drawable/shape"

        android:text="@string/my_table"
        android:textSize="40sp" />

    <Button
        android:id="@+id/main_btn_alarm"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:layout_below="@id/main_btn_cources"
        android:layout_marginTop="133dp"
        android:layout_marginRight="112dp"
        android:layout_toLeftOf="@id/main_btn_tables"
        android:background="@drawable/shape"

        android:text="@string/my_alarm"
        android:textSize="40sp" />

    <Button
        android:id="@+id/main_btn_encourage"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:layout_below="@id/main_btn_tables"
        android:layout_marginTop="83dp"

        android:background="@drawable/shape"
        android:text="@string/my_encourage"
        android:textSize="40sp" />
</RelativeLayout>